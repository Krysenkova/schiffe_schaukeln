import processing.video.*;
Movie water;
Schiff schiff;
Stone stone;

void setup() {
size(1900, 1000);

water = new Movie(this, "water.mp4");
water.loop();
schiff = new Schiff(800, 600);

stone = new Stone(30, 50, 100);

}

void draw(){
if (water.available()){
  water.read();
}

image(water, 150, 0, 1650, 1000);
frameRate(5);
noTint();
fill(11,116,165);
rect(0,0,150,1000);
rect(1750,0,150,1000);
noTint();
schiff.display();

  
  stone.display();
  stone.update();
  stone.interact();
  
  
  
}
